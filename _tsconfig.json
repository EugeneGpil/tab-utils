{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es2015",
    "lib": ["DOM", "ES2020", "ES2019.Object"],
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
    "checkJs": false,
    "jsx": "preserve",
    "esModuleInterop": true
  },
  "exclude": ["node_modules"],
  "include": ["./node_modules/@types/**/*.d.ts", "./**/*.js", "./**/*.ts"]
}
